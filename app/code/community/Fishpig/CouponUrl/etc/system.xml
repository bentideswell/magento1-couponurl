<?xml version="1.0"?>
<config>
	<tabs>
		<fishpig translate="label" module="couponurl">
			<label>FishPig</label>
			<sort_order>200</sort_order>
		</fishpig>
	</tabs>
    <sections>
        <couponurl translate="label" module="couponurl">
            <label>Coupon URL</label>
            <tab>fishpig</tab>
            <sort_order>245</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<settings>
            		<label>Settings</label>
            		<sort_order>6</sort_order>
            		<show_in_default>1</show_in_default>
            		<show_in_website>1</show_in_website>
            		<show_in_store>1</show_in_store>
            		<fields>
            			<enabled>
            				<label>Enabled</label>
            				<frontend_type>select</frontend_type>
            				<source_model>adminhtml/system_config_source_yesno</source_model>
            				<sort_order>1</sort_order>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            			</enabled>
            			<route>
            				<label>Front Name</label>
            				<frontend_type>text</frontend_type>
            				<sort_order>6</sort_order>
            				<show_in_default>1</show_in_default>
            			</route>
            			<param>
            				<label>URL Param Name</label>
            				<comment>Value here can be used as a query string parameter to enable coupon's via a URL</comment>
            				<frontend_type>text</frontend_type>
            				<sort_order>11</sort_order>
            				<show_in_default>1</show_in_default>
            			</param>
            		</fields>
            	</settings>
            	<success>
            		<label>On Success</label>
            		<sort_order>11</sort_order>
            		<show_in_default>1</show_in_default>
            		<show_in_website>1</show_in_website>
            		<show_in_store>1</show_in_store>
            		<fields>
            			<message>
            				<label>Message</label>
            				<frontend_type>text</frontend_type>
            				<sort_order>1</sort_order>
            				<show_in_default>1</show_in_default>
            			</message>
            			<redirect_to>
            				<label>Redirect To</label>
            				<frontend_type>text</frontend_type>
            				<sort_order>1</sort_order>
            				<show_in_default>1</show_in_default>
            				<comment>Enter the full URL to redirect to after successfully applying a coupon.</comment>
            			</redirect_to>
            		</fields>
            	</success>
            </groups>
        </couponurl>
    </sections>
</config>